<main class="page  ">
    <section class="clean-block  clean-form">
        <div class=" text-center">
            <h2 ><strong>Contact Us</strong></h2>
            <p class="m-auto" style="max-width: 500px;">For general questions regarding the society and services please
                use the form below: </p>
        </div>
        <!--apapado@wakehealth.edu-->


        <form class="shadow" action="/contact" method="post" role="form">

            <!--Header-->
            <div class="modal-header btn-cyan darken-3 white-text shadow">
                <h4 class="title"><i class="fas fa-pencil-alt"></i> Contact form</h4>
            </div>
            <!--Body-->
            <div class="modal-body mb-0">
                <div class="md-form form-sm">
                    <i class="fas fa-user prefix "></i>
                    <input type="text" id="form8" class="form-control" name="name" required>
                    <label for="form8" class="active">Your name</label>
                </div>

                <div class="md-form form-sm">
                    <i class="fas fa-envelope prefix"></i>
                    <input type="email" id="form9" class="form-control"  name="email" required>
                    <label for="form9" class="active">Your email</label>
                </div>

                <div class="md-form form-sm">
                    <i class="fas fa-tag prefix"></i>
                    <input type="text" id="form-autocomplete-2" class="form-control" name="subject" required>
                    <label for="form-autocomplete-2" class="active">Subject</label>
                </div>

                <div class="md-form form-sm">
                    <i class="fas fa-pencil-alt prefix "></i>
                    <textarea type="text" id="form67" class="md-textarea mb-0" name="message" required></textarea>
                    <label for="form67" class="active">Your message</label>
                </div>

                <div class="text-center mt-1-half">
                    <button class="btn btn-block mb-2 waves-effect waves-light deep-purple darken-3 white-text">Send <i class="fas fa-send ml-1"></i>
                    </button>
                </div>

            </div>
            </div>
            <!--/.Content-->
        </form>
        <br> <br>

        <div class=" shadow container" style="max-width: 500px; margin:auto">
            <br>
            <div class="text-center">

<main class="page ">
    <section class="clean-block clean-form dark">
        <% if(!isAdmin) { %>
            <h1 class="img-fluid text-center"><img class="img-fluid" src="assets/img/vegas-meeting.png"></h1>
        <% } %>
        <div class="col-md-12 search-table-col">
            <div class="table-responsive table-bordered table table-hover table-bordered results">
                <table class="table table-bordered table-hover">
                    <thead class="bill-header cs">
                    <tr>
                        <th id="trs-hd" class="col-2">Name</th>
                        <th id="trs-hd" class="col-3">Role</th>
                        <th id="trs-hd" class="col-3">Location</th>
                        <% if( isAdmin) { %>
                            <th id="trs-hd" class="col-2">Action</th>
                        <% } %>
                    </tr>
                    </thead>
                    <% members.forEach(function(member){ %>
                        <tbody>
                        <tr>
                            <td><%= member.name %></td>
                            <td><%= member.role %></td>
                            <td><%= member.address %></td>
                            <% if( isAdmin) { %>
                                <td><form id='editForm' class="form-check-inline" action="/admin1/<%= member.id %>/edit" method="get" > <button id="edit" class="btn btn-info btn-sm " type="submit">Edit</button></form>
                                    <form id='editForm' class="form-check-inline" action="/admin1/<%= member.id %>/edit" method="get" > <button class="btn btn-danger btn-sm" type="submit">Delete</button></form>
                                </td>
                            <% } %>
                        </tr>
                        </tbody>
                    <% }); %>
                </table>
            </div>
        </div>
    </section>
</main>





<div class="container-form bg-white p-0  mx-auto hover2 fadeInDown rounded">
    <table class="table table-borderless">
        <tr>
            <tbody class="p-0">
            <form id="" class="" action="/users/<%= user.id %>?_method=PUT" method="POST" >
                <div class="text-center pt-2">
                    <h2 class="d-inline fadeIn second "> Edit User </h2>
                </div>

                <div class="card-body">
                    <div class="col-md-12 mx-auto ">

                        <div class="hover form-group mt-2">
                            <input type="text" id="username" class="form-control" name="user[username]" required
                                   value="<%= user.username %>">
                            <label class="form-control-placeholder" for="username">username</label>
                        </div>

                        <div class="hover form-group ">
                            <input type="password" id="password" class="form-control" name="user[password]"
                                   value="<%= user.password %>" required>
                            <label class="form-control-placeholder " for="password">password</label>
                        </div>

                        <div class="hover form-group ">
                            <input type="text" id="firstName" class="form-control" name="user[firstName]"
                                   value="<%= user.firstName %>" required>
                            <label class="form-control-placeholder " for="firstName">first name</label>
                        </div>

                        <div class="hover form-group ">
                            <input type="text" id="lastName" class="form-control" name="user[lastName]"
                                   value="<%= user.lastName %>" required>
                            <label class="form-control-placeholder " for="lastName">last name</label>
                        </div>


                        <div class="hover form-group ">
                            <input type="text" id="city" class="form-control" name="user[city]" value="<%= user.city %>"
                                   required>
                            <label class="form-control-placeholder " for="city">city</label>
                        </div>

                        <div class="hover form-group ">
                            <input type="email" id="email" class="form-control" name="user[email]"
                                   value="<%= user.email %>" required>
                            <label class="form-control-placeholder " for="email">email</label>
                        </div>

                        <div class="form-group row mb-lg-n2">

                            <div class="text-center col-3 ml-n1">
                                <button id="sbmt" class=" btn btn-primary">submit</button>
                            </div>

                            <div class="d-inline text-center  col-2 mt-1 ">
                                <div id="loading" class="d-inline "></div>
                            </div>

                        </div>


                    </div>

                </div>
            </form>
            </tr>
            <tr class="bg-light ">
                <div class="back-grey text-decoration-none "></div>
            </tr>

            </tbody>
    </table>
</div>
<script>document.querySelector('title').innerText = "Edit Profile"</script>



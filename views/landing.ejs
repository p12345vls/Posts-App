    <section style="max-width: 500px">
        <!-- Modal -------------------------------------------------------------------------------------------------------------------------->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">

                    <!--membership form-------------------------------------------------------------------------------------------------->

                    <section class="clean-block clean-form dark">
                        <div class="">
                            <button type="button" class="close mt-5 mr-2" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <div class="block-heading mt-n5">
                                <h2 class="text-info heading-modal">Membership Application</h2>
                                <p class="modal-heading-parag">Members of the society can register using this form.</p>
                            </div>
                            <form class="">
                                <div class="mt-n4">
                                    <div class="form-group input-group-sm">

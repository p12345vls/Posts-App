<% include ./partials/headStatics %>
<main class="page" id="page">

    <section style="max-width: 500px">
        <!-- Modal ---------------------------------------------------------------------------------------------------->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <section class="clean-block clean-form dark">
                        <div class="">
                            <button type="button" class="close mt-5 mr-2" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <div class="block-heading mt-n5">
                                <h2 class="text-info heading-modal">Membership Application</h2>
                                <p class="modal-heading-parag">Members of the society can register using this form.</p>
                            </div>
                            <!--membership form------------------------------------------------------------------------>
                            <form id="membership-form" action="/members" method="post">
                                <div class="mt-n4">
                                    <div class="form-group input-group-sm">
                                        <input class="form-control item  hover" type="text" id="firstname"
                                               placeholder="first name" name="member[name]" required></div>
                                    <div class="form-group input-group-sm">
                                        <input class="form-control item  hover" type="text" id="lastname"
                                               placeholder="last name" name="member[lastname]" required></div>
                                    <div class="form-group input-group-sm">
                                        <input class="form-control item  hover" type="text" id="role"
                                               placeholder="current position " name="member[role]" required></div>
                                    <p title="E.g.'professor'"
                                       style="position: absolute; margin-top: -44px;margin-left: -17px;">
                                        <i class="fas fa-question-circle"></i>
                                    </p>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item hover" type="email" id="email"
                                               placeholder="email" name="member[email]" required></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="fullAddress"
                                               placeholder="full Address" name="member[address]" required></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="phone"
                                               placeholder="phone" name="member[phone]"></div>
                                    <button class="btn btn-block hover shadow-sm" style="background-color: #ffc439;">
                                        <img class="float-left" src="assets/img/paypal.png" width="100" height="">
                                        <strong class="float-left mt-1 ml-2">Submit $100.00</strong>
                                    </button>
                                </div>
                            </form>
                            <!--end membership form-------------------------------------------------------------------->

                            <!-- paypal form submitted after the membership form- - - - - - - - - - - - -  - - - - - -->
                            <form id="paypal-form" action="https://www.paypal.com/cgi-bin/webscr" method="post"
                                  target="_top">
                                <input type="hidden" name="cmd" value="_s-xclick">
                                <input type="hidden" name="hosted_button_id" value="9RCELQHS9DKWN">
                                <!-- paypal - - - - - - - - - - - - - - - - - - - - - - - - -->
                            </form>


                        </div>
                    </section>

                </div>
            </div>
        </div>
        <!--end Modal ----------------------------------------------------------------------------------------------------------------------->
    </section>

    <section>
        <div class="jumbotron">
            <div class="container-fluid m-auto " style="max-width: 1000px;">
                <h1 class=""><strong class="heading-mobile">Hellenic American <br>Hippocratic Society</strong>
                </h1>

                <h1 class=""><strong class="heading">Hellenic American Hippocratic Society</strong></h1>
                <!--modal button ---------------------------------------------------------------------------------------------------------------------->
                <p class="">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                        Be a Member
                    </button>
                </p>
                <!--modal button ---------------------------------------------------------------------------------------------------------------------->

            </div>
        </div>
    </section>

    <div class="container" style="max-width: 700px;">
        <hr style="color: #000000;background-color: #ffffff;">
        <p class="text-left d-table-row" style="font-size: 14px;">The Hellenic&nbsp;American Hippocratic Society is a
            private, non-profit society of physicians and scientists whose main interest is the study of the
            musculoskeletal system. Members of the society are United States or Canada or Greek citizens
            or permanent residents. The members of the society work together to promote the exchange of ideas,
            experiences and professional opportunities within the field of orthopaedic surgery. In addition, it is the
            focus of the society to recognize
            outstanding contributions to knowledge or understanding of orthopaedic problems. It is within the scope of
            the society to promote scientific or professional interactions in the forms of scientific meetings,
            observership programs or any
            other forms of professional activity that strengthen the understanding and treatment of the orthopaedic
            diseases as well as the professional achievements of the&nbsp;members.</p>
        <hr>
    </div>
    <section class="text-center clean-block features" data-aos="zoom-in" data-aos-delay="350" data-aos-once="true">
        <div class="container">
            <h3 class="text-center text-primary" style="color: rgb(77,140,204);"><span class="fa-stack"><i
                            class="fa fa-circle fa-stack-2x text-muted"></i><i
                            class="fas fa-award fa-stack-1x fa-inverse"></i></span>Recognition
                Levels</h3>
        </div>
        <div class="container" style="width: 350px;background-color: #f6f6f6;">
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <p class="mt-2">Olympic Founder<br>$5000 or more</p>
                            <p>Founder<br>$2000-$5000</p>
                            <p>Patron<br>$1000-$2000</p>
                            <p>Friend<br>$500-$1000</p>

                          <a href="mailto:apapado@wakehealth.edu">
                              <button class="btn btn-primary btn-block btn-sm mb-2"
                                    data-aos="zoom-in" data-aos-duration="150"
                                    type="submit" style="background-color: rgba(0,123,255,0.74);">
                                Join NOW
                            </button>
                          </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div></div>
    </section>
</main>
<!--if member created redirect to paypal to pay-->
<% if (typeof message != "undefined"){ %>
    <script>document.getElementById('page').style.opacity = '0.2';</script>
    <div class="text-center bg-primary text-white" style="top: 80px; position: absolute; left:0;right:0; z-index: 22222;">
        <h4 ><%= message %></h4>
        <p>You will be redirected to paypal page to complete the membership payment</p>
    </div>
    <script>
        setInterval(paypal, 6000);
        function paypal() {
            document.getElementById("paypal-form").submit()
        }
    </script>
<% } %>
<!--end pay-->



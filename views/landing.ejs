                                        <input class="form-control item  hover" type="text" id="city"
                                               placeholder="city"></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="state"
                                               placeholder="state"></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="country"
                                               placeholder="country"></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="zip"
                                               placeholder="zip code"></div>
                                    <div class="form-group input-group-sm mt-n3">
                                        <input class="form-control item  hover" type="text" id="phone"
                                               placeholder="phone"></div>
                                </div>
                                <button class="btn btn-primary btn-block" type="submit">Submit $100.00</button>
                            </form>
                        </div>
                    </section>
                    <!--end membership form-------------------------------------------------------------------------------------------------->

                </div>

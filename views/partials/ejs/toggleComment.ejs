<script>
    $(document).ready(function () {
        var oddOrEvenComm = 0;
        //toggle the comment if it is more than 100 characters
        $('#<%= commentArrow %>').click(function () {
            oddOrEvenComm += 1;
            if (oddOrEvenComm % 2 === 0) {
                $(('#<%= someComment %>')).css('display', 'block');
                $('#<%= allComment %>').css('display', 'none');
                $('#<%= bodyComment %>').css('box-shadow', '1px 2px 5px white');
            } else {
                $('#<%= someComment %>').css('display', 'none');
                $('#<%= allComment %>').css('display', 'block');
                $('#<%= bodyComment %>').css('box-shadow', '1px 2px 5px #888');
            }
        });
    });
</script>







